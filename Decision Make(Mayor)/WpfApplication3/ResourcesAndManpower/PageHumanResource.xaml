<Page x:Class="WpfApplication3.ResourcesAndManpower.PageHumanResource"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="PageHumanResource"
      Loaded="Page_Loaded">
    <Page.Resources>
        <ControlTemplate x:Key="listBoxItemLeader" TargetType="{x:Type ListBoxItem}">
            <Button Name="Leader" Content="{Binding}" Click="Leader_Click"></Button>
        </ControlTemplate>
        <ControlTemplate x:Key="listBoxItemDepart" TargetType="{x:Type ListBoxItem}">
            <Button Name="Depart" Content="{Binding}" Click="Depart_Click"></Button>
        </ControlTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="80*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"></ColumnDefinition>
            <ColumnDefinition Width="20*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="区长：xx" Name="Leader"></Label>
            <Label Content="彭崧" Name="ViceLeader"></Label>
            <Label Content="规划和土地管理局" Name="Department"></Label>
        </StackPanel>
        
        <!--人员列表-->
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="局长：许健" Name="JuZhang" Grid.Row="0" Click="JuZhang_Click"></Button>
            <ListBox Name="listLeader" Grid.Row="1">
                <ListBox.Template>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True" Background="{x:Null}"/>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" >
                        <Setter Property="Template" Value="{StaticResource listBoxItemLeader}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>


        <!--部门列表-->
        <ListBox Name="listDepartment" Grid.Row="1" Grid.Column="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" >
                    <Setter Property="Template" Value="{StaticResource listBoxItemDepart}"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" TextWrapping="Wrap" Name="BriefIntro"></TextBlock>
            <TextBlock Grid.Row="1" TextWrapping="Wrap" Name="Address"></TextBlock>
        </Grid>
        
        
    </Grid>
</Page>
